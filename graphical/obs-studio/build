#!/bin/sh -e

mkdir -p build
cd build

# cmake .. \
# 	-DCMAKE_INSTALL_PREFIX=/usr \
# 	-DCMAKE_LIBDIR=lib \
# 	-DBUILD_FOR_DISTRIBUTION=ON \
# 	-DBUILD_TESTS=OFF \
# 	-DENABLE_WAYLAND=OFF \
# 	-DENABLE_PULSEAUDIO=OFF \
# 	-DENABLE_PIPEWIRE=OFF \
# 	-DENABLE_V4L2=OFF \
# 	-DENABLE_VLC=OFF \
# 	-DENABLE_VST=OFF \
# 	-DENABLE_SPEEXDSP=OFF \
# 	-DENABLE_AJA=OFF \
# 	-DENABLE_BROWSER=OFF
cmake .. \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DENABLE_WAYLAND=OFF \
	-DDISABLE_PULSEAUDIO=ON \
	-DENABLE_PIPEWIRE=OFF \
	-DDISABLE_VLC=ON \
	-DBUILD_VST=OFF \
	-DDISABLE_SPEEXDSP=ON \
	-DDISABLE_AJA=ON \
	-DENABLE_V4L2=ON \
	-DBUILD_BROWSER=OFF

make
make install

rm -rf "$1/home" "$1/root"
